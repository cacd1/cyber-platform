service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper: Check if user is the Admin (nb2@admin.com)
    function isAdmin() {
      return isAuthenticated() && request.auth.token.email == 'nb2@admin.com';
    }

    // Helper: Check if user is owner of the document (resource)
    function isOwner(resource) {
      return isAuthenticated() && resource.data.createdBy == request.auth.uid;
    }

    // Helper: Check if user is setting themselves as owner on create
    function isOwnerOnCreate() {
      return isAuthenticated() && request.resource.data.createdBy == request.auth.uid;
    }

    // Helper: Validate text input (prevent excessively long strings)
    function isValidText(text, maxLength) {
      return text is string && text.size() <= maxLength;
    }

    // 1. Lectures: Authenticated reads only
    match /lectures/{lectureId} {
      allow read: if isAuthenticated();
      allow create: if isOwnerOnCreate() 
        && request.resource.data.name is string 
        && request.resource.data.name.size() <= 200;
      allow update, delete: if isOwner(resource) || isAdmin();
    }

    // 2. Announcements: Authenticated reads only
    match /announcements/{announcementId} {
      allow read: if isAuthenticated();
      allow create: if isOwnerOnCreate()
        && request.resource.data.text is string
        && request.resource.data.text.size() <= 1000;
      allow update, delete: if isOwner(resource) || isAdmin();
    }
    
    // 3. Representatives: SECURED
    match /representatives/{repId} {
      allow get: if isAdmin() || (isAuthenticated() && request.auth.uid == repId);
      allow list: if request.query.limit <= 1;
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || (request.auth.uid == repId && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastSeen']));
    }

    // 4. Access Code Verification: Public read with strict query limits
    match /accessCodes/{codeId} {
      allow get: if true; 
      allow list: if request.query.limit <= 1;
      allow write: if isAdmin();
    }

    // 5. Settings: Public read (for global themes/alerts) or Auth only?
    // Alerts need to be seen by everyone entering? 
    // If they have code => they are auth. So Auth read is fine unless it's on Landing.
    // Let's keep public read for settings as it contains non-sensitive theme/alert info.
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin()
        && (!('alertMessage' in request.resource.data) || request.resource.data.alertMessage.size() <= 500);
    }

    // Default: Deny all - NO public read for unmatched paths
    match /{document=**} {
      allow read, write: if false; 
    }
  }
}

