service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is owner of the document
    function isOwner(resource) {
      return isAuthenticated() && resource.data.createdBy == request.auth.uid;
    }

    // Helper function to check if user is setting themselves as owner on create
    function isOwnerOnCreate() {
      return isAuthenticated() && request.resource.data.createdBy == request.auth.uid;
    }

    match /lectures/{lectureId} {
      allow read: if true;
      allow create: if isOwnerOnCreate();
      allow update, delete: if isOwner(resource);
    }

    match /announcements/{announcementId} {
      allow read: if true;
      allow create: if isOwnerOnCreate();
      allow update, delete: if isOwner(resource);
    }
    
    match /representatives/{repId} {
      allow read: if true;
      allow write: if isAuthenticated() && request.auth.uid == repId;
    }

    match /{document=**} {
      allow read: if true;
      allow write: if false; // Deny all other writes by default
    }
  }
}
