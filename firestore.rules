service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper: Check if user is the Admin (nb2@admin.com)
    function isAdmin() {
      return isAuthenticated() && request.auth.token.email == 'nb2@admin.com';
    }

    // Helper: Check if user is owner of the document (resource)
    function isOwner(resource) {
      return isAuthenticated() && resource.data.createdBy == request.auth.uid;
    }

    // Helper: Check if user is setting themselves as owner on create
    function isOwnerOnCreate() {
      return isAuthenticated() && request.resource.data.createdBy == request.auth.uid;
    }

    // Helper: Validate text input (prevent excessively long strings)
    function isValidText(text, maxLength) {
      return text is string && text.size() <= maxLength;
    }

    // 1. Lectures: Anyone reads, Only Reps create/edit their own
    match /lectures/{lectureId} {
      allow read: if true;
      allow create: if isOwnerOnCreate() 
        && request.resource.data.name is string 
        && request.resource.data.name.size() <= 200;
      allow update, delete: if isOwner(resource) || isAdmin();
    }

    // 2. Announcements: Anyone reads, Only Reps create/edit their own
    match /announcements/{announcementId} {
      allow read: if true;
      allow create: if isOwnerOnCreate()
        && request.resource.data.text is string
        && request.resource.data.text.size() <= 1000;
      allow update, delete: if isOwner(resource) || isAdmin();
    }
    
    // 3. Representatives: SECURED - Only Admin can read full data
    // Students can only verify if an accessCode exists (via query)
    match /representatives/{repId} {
      // Only Admin can read representative data directly
      // Or the representative themselves
      allow read: if isAdmin() || (isAuthenticated() && request.auth.uid == repId);
      
      // ONLY Admin (nb2@admin.com) can add/delete representatives
      allow create, delete: if isAdmin();
      
      // Admin can update anything, Rep can only update lastSeen
      allow update: if isAdmin() || (request.auth.uid == repId && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastSeen']));
    }

    // 4. Access Code Verification Collection (new secure approach)
    // This allows students to verify codes without exposing rep data
    match /accessCodes/{codeId} {
      // Anyone can read to verify a code exists
      allow read: if true;
      // Only admin can manage codes
      allow write: if isAdmin();
    }

    // 5. Settings: CRITICAL - Only Admin can change global settings
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin()
        && (!('alertMessage' in request.resource.data) || request.resource.data.alertMessage.size() <= 500);
    }

    // Default: Deny all - NO public read for unmatched paths
    match /{document=**} {
      allow read, write: if false; 
    }
  }
}

